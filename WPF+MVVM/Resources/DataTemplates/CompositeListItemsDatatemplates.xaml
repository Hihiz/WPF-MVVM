<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:decanat="clr-namespace:WPF_MVVM.Models.Decanat"
                    xmlns:sys="clr-namespace:System;assembly=System.Runtime">

    <DataTemplate DataType="{x:Type decanat:Group}">
        <TextBlock Text="{Binding Name, StringFormat=Группа {0}}"/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type decanat:Student}">
        <TextBlock Text="{Binding Name, StringFormat=Студент {0}}"/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type sys:String}">
        <TextBlock>
                                <Run Foreground="Red" FontWeight="Bold">Строкa:</Run> <TextBlock Text="{Binding}"/>
                                </TextBlock>
    </DataTemplate>
    <DataTemplate DataType="{x:Type sys:Int32}">
        <TextBlock>
                                Число <TextBlock Text="{Binding}"/>
                                </TextBlock>
    </DataTemplate>

</ResourceDictionary>